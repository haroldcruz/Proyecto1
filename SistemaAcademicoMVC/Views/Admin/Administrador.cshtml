@model SistemaAcademicoMVC.Models.TablasAdminViewModel
@{
    ViewBag.Title = "Administración de Tablas";
}
<form method="post" action="@Url.Action("Limpiar", "Admin")">
    <button type="submit">Borrar todos los datos</button>
</form>

<!-- Docentes -->
<h2>Docentes</h2>
<table border="1">
    <tr>
        @foreach (var prop in typeof(SistemaAcademicoMVC.Models.Docente).GetProperties())
        {
            <th>@prop.Name</th>
        }
    </tr>
    @foreach (var d in Model.Docentes)
    {
        <tr>
            @foreach (var prop in typeof(SistemaAcademicoMVC.Models.Docente).GetProperties())
            {
                <td>@prop.GetValue(d, null)</td>
            }
        </tr>
    }
</table>

