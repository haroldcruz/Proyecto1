@model CalificarViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Vista principal de calificación -->
<h2>Calificar estudiante: @Model.Matricula.Estudiante.Nombre @Model.Matricula.Estudiante.Apellidos</h2>
<h4>Curso: @Model.Matricula.Curso.Nombre</h4>

<div>
    <button onclick="mostrarModulo('participacion')">Registrar Participaciones</button>
    <button onclick="mostrarModulo('asignaciones')">Calificar Asignaciones</button>
    <button onclick="mostrarModulo('notaFinal')">Generar Nota Final</button>
</div>

<!-- Modulos parciales -->
<div id="modulo-participacion" style="display:none;">
    @Html.Partial("_ParticipacionPartial", Model.Participaciones)
</div>
<div id="modulo-asignaciones" style="display:none;">
    @Html.Partial("_AsignacionesPartial", Model.Tareas)
</div>
<div id="modulo-notaFinal" style="display:none;">
    @Html.Partial("_NotaFinalPartial", Model)
</div>

<script>
    function mostrarModulo(modulo) {
        document.getElementById('modulo-participacion').style.display = modulo === 'participacion' ? 'block' : 'none';
        document.getElementById('modulo-asignaciones').style.display = modulo === 'asignaciones' ? 'block' : 'none';
        document.getElementById('modulo-notaFinal').style.display = modulo === 'notaFinal' ? 'block' : 'none';
    }
</script>