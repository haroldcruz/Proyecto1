@*
    Layout principal con spinner moderno, menú dinámico y mensajes de bienvenida, éxito y error.
    Harold Cruz - 2025
*@
@{
    var docenteNombre = Session["DocenteNombre"] as string;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema Académico MVC</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>

        /* Spinner moderno centrado, usando Bootstrap */
        #loading-spinner {
            display: none;
            position: fixed;
            z-index: 9999;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(255,255,255,0.6);
            text-align: center;
        }

            #loading-spinner .centered-spinner {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }
    </style>
</head>
<body>
    <!-- Spinner de carga -->
    <div id="loading-spinner">
        <div class="centered-spinner">
            <div class="spinner-border text-primary" role="status" style="width:4rem;height:4rem;">
                <span class="sr-only">Cargando...</span>
            </div>
            <div class="mt-3 text-dark">Cargando información...</div>
        </div>
    </div>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sistema Académico MVC", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Estudiantes", "Index", "Estudiantes")</li>
                    <li>@Html.ActionLink("Editar Perfil", "EditarPerfil", "Docentes")</li>
                    <li>@Html.ActionLink("Cursos", "Index", "Cursos")</li>
                    <li>@Html.ActionLink("Estadísticas académicas", "Index", "Estadisticas")</li>
                    <li>@Html.ActionLink("Asistencia", "Index", "Participacion")</li>
                    <li>@Html.ActionLink("Asignaciones", "Index", "Asignaciones")</li>
                    <li>
                        <a href="@Url.Action("Administrador", "Admin")">Ver tablas de administración</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (docenteNombre != null)
                    {
                        <li class="navbar-text">Bienvenido, @docenteNombre</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>
                        <li>@Html.ActionLink("Registro", "Register", "Docentes")</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content" style="margin-top:60px;">
        @* Mensajes de éxito y error globales *@
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <script>
                setTimeout(function () {
                    $('.alert-success').fadeOut();
                }, 3000);
            </script>
        }
        @if (ViewData.ModelState.Any(x => x.Value.Errors.Count > 0))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sistema Académico MVC | Desarrollado por Harold Cruz</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
<script>
    // Spinner solo para formularios que NO sean #register-form ni login
    $(document).on('submit', 'form:not(#register-form):not(#login-form)', function () {
        $('#loading-spinner').show();
    });
    $(document).on('click', 'a', function (e) {
        var href = $(this).attr('href');
        if (href && href !== '#' && !$(this).attr('target')) {
            $('#loading-spinner').show();
        }
    });
    $(window).on('load', function () {
        $('#loading-spinner').hide();
    });
    $(document).ajaxStart(function () {
        $('#loading-spinner').show();
    });
    $(document).ajaxStop(function () {
        $('#loading-spinner').hide();
    });
</script>
</body>
</html>