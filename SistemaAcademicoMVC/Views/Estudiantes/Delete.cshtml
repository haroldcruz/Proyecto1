@model SistemaAcademicoMVC.Models.Estudiante

@{
    ViewBag.Title = "Eliminar Estudiante";
}

<!--
    Vista Delete: Muestra los datos del estudiante a eliminar y solicita confirmación.
    Permite regresar a la lista o proceder con la eliminación.
-->

<h2>Eliminar Estudiante</h2>

<h3>¿Estás seguro que deseas eliminar este estudiante?</h3>
<div>
    <h4>Estudiante</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Apellidos)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Apellidos)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Identificacion)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Identificacion)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Provincia)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Provincia)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Canton)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Canton)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Distrito)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Distrito)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Correo)
        </dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-actions no-color">
        <!-- Botón para confirmar la eliminación -->
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <!-- Enlace para regresar a la lista sin eliminar -->
        @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn btn-default" })
    </div>
}